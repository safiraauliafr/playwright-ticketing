// Playwright Config

{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@common/*": [
        "./tests/common/*"
      ],
      "@basepage": [
        "./tests/common/utils/BasePage.ts"
      ],
      "@utils/*": [
        "./tests/common/utils/*"
      ],
      "@steps/*": [
        "./tests/steps/*"
      ],
      "@fixtures/*": [
        "tests/fixtures/*"
      ],
      "@config": [
        "./config"
      ],
      "~/*": [
        "./*"
      ],
    },
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}